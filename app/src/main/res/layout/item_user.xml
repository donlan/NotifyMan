<?xml version="1.0" encoding="utf-8"?>
<dong.lan.base.ui.customView.RelativeCarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rcv_marginX="10dp"
    app:rcv_marginY="10dp"
    app:rcv_elevation="6dp"
    app:rcv_elevationColor="@color/grey_1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:orientation="vertical">

   <dong.lan.base.ui.customView.CircleImageView
       android:src="@drawable/user"
       android:id="@+id/item_user_avatar"
       android:layout_width="60dp"
       android:layout_height="60dp" />

    <TextView
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/item_user_avatar"
        android:textSize="20sp"
        android:id="@+id/item_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/item_user_avatar"
        android:layout_below="@id/item_username"
        android:textSize="16sp"
        android:id="@+id/item_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />
</dong.lan.base.ui.customView.RelativeCarView>